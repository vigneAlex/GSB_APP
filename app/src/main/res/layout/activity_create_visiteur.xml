<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_gravity="center"
    tools:context=".CreateVisiteurActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_gsb"/>

    <EditText
        android:id="@+id/ed_nom"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"/>

    <EditText
        android:id="@+id/ed_prenom"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prenom"/>

    <EditText
        android:id="@+id/ed_mail"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse mail"/>

    <EditText
        android:id="@+id/ed_mdp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mot de passe"/>

    <EditText
        android:id="@+id/ed_confirmMdp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirmer mot de passe"/>

    <EditText
        android:id="@+id/ed_tel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Téléphone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_envoyer"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="envoyer"/>

</LinearLayout>